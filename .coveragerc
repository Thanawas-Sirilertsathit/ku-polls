[run]
# Ignore Python library files and add-ons
omit =
    /usr/lib/*
    /usr/local/*
    .local/*
    env/*
    */__init__.py
    */migrations/*
    mysite/*
    manage.py
    */__str__.py
    */__repr__.py
include =
    polls/*
    tests/*
# Additional configuration options
branch = True
cover_pylib = False
relative_files = True

[report]
# Exclude specific methods from the report
exclude_also =
    def __str__
    def __repr__